<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="NinePlaces.QuickEditControl"
	d:DesignWidth="256" d:DesignHeight="24">

	<Grid x:Name="LayoutRoot" Width="Auto">
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="30" Width="Auto"/>
			<ColumnDefinition MinWidth="60" Width="*"/>
		</Grid.ColumnDefinitions>
		<TextBlock x:Name="lblEditLabel" Grid.Column="0" Style="{StaticResource EditorTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="NoWrap">
		Destination:
		</TextBlock>
		<TextBox x:Name="tbQuickEditTextBox" Style="{StaticResource EditorTextBoxStyle}" Grid.Column="1" Padding="0" BorderThickness="0" Margin="1" Height="Auto" Width="Auto" Canvas.ZIndex="1"/>
	</Grid>
</UserControl>