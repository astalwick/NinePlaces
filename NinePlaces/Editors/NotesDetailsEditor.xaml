<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="NinePlaces.NotesDetailsEditor"
	d:DesignWidth="406" d:DesignHeight="328" xmlns:NinePlaces="clr-namespace:NinePlaces">

    <Grid x:Name="LayoutRoot" Width="Auto" Margin="4,4,4,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition MinHeight="100" Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Text="Title:" Width="Auto" Style="{StaticResource EditorTextBlockStyle}" x:Name="textBlock" Height="16" />
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="tbNoteTitle" Width="Auto" Text="{Binding Title, Mode=TwoWay}" Style="{StaticResource EditorTextBoxStyle}" Height="21" />
        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Width="Auto" Height="Auto" VerticalAlignment="Stretch" AcceptsReturn="True" Text="{Binding NoteText, Mode=TwoWay}" TextWrapping="Wrap"  Style="{StaticResource EditorTextBoxStyle}" x:Name="tbHotelAddress"  />
    </Grid>
</UserControl>