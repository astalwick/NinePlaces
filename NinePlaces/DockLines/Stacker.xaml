<NinePlaces:DockableControlBase x:Class="NinePlaces.Stacker"
    xmlns:NinePlaces="clr-namespace:NinePlaces"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">


    <Canvas x:Name="LayoutRoot" Canvas.ZIndex="0">
        <Canvas x:Name="ClickAbsorbCanvas" IsHitTestVisible="False" Visibility="Collapsed" Opacity="100" Background="#01FFFFFF">
        </Canvas>
        <Border x:Name="StackCanvas" Background="White" Opacity=".5" Canvas.ZIndex="0" BorderThickness="0"  CornerRadius="10,10,10,10">
            <Canvas  Height="0" Width="0" IsHitTestVisible="True" >
            </Canvas>
        </Border>
    </Canvas>
</NinePlaces:DockableControlBase>
